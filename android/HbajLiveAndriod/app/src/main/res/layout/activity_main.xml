<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <workvideo.meetingSdk.media.CameraView
        android:id="@+id/cameraView"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:visibility="gone"
        />
    <workvideo.meetingSdk.media.PlayerView
        android:id="@+id/playerView"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
    <workvideo.meetingSdk.media.PlayerView
        android:id="@+id/playerView0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playerView"/>
    <workvideo.meetingSdk.media.PlayerView
        android:id="@+id/playerView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/playerView0"
        android:layout_below="@+id/playerView"/>
    <workvideo.meetingSdk.media.PlayerView
        android:id="@+id/playerView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/playerView1"
        android:layout_below="@+id/playerView"/>
    <workvideo.meetingSdk.media.PlayerView
        android:id="@+id/playerView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/playerView2"
        android:layout_below="@+id/playerView"/>

    <LinearLayout
        android:id="@+id/bottombar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/nextpagebt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="下一页"/>
        <Button
            android:id="@+id/startCamera"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="开启摄像头"/>
        <Button
            android:id="@+id/startDesktop"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="开启桌面"/>
        <Button
            android:id="@+id/invitUsers"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="邀请参会者"/>
        <Button
            android:id="@+id/prepagebt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="上一页"/>
    </LinearLayout>

</android.widget.RelativeLayout>